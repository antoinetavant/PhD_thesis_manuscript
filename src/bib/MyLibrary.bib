@article{campanell2015,
  title = {Self-Amplification of Electrons Emitted from Surfaces in Plasmas with {{E}} \texttimes{} {{B}} Fields},
  author = {Campanell, M D and Wang, H and Kaganovich, I D and Khrabrov, A V},
  year = {2015},
  volume = {24},
  pages = {034010},
  doi = {10.1088/0963-0252/24/3/034010},
  abstract = {Emission from surfaces is known to cause enhanced wall heating and enhanced energy loss from plasma electrons. When E\,\,\texttimes\,\,B fields are present, emitted electrons are heated by the drift motion and cause enhanced transport along E. All emission effects are normally predicted to reach a maximum when the sheath becomes space-charge limited because any `additional' emitted electrons return to the wall. But the returning electrons are also heated in the E\,\,\texttimes\,\,B drift, further enhancing transport, and return to the wall with extra energy, further enhancing the energy flux. Returning electrons can gain enough energy to induce secondaries, thereby self-amplifying to higher intensities. This newly analyzed mechanism could affect the wall heating, transport and global energy balance under certain conditions. Theory and simulations are presented.},
  journal = {Plasma Sources Science and Technology},
  number = {3}
}

@article{carlsson2016,
