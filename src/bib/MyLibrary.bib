@article{pancheshnyi2012,
  title = {The {{LXCat}} Project: {{Electron}} Scattering Cross Sections and Swarm Parameters for Low Temperature Plasma Modeling},
  shorttitle = {The {{LXCat}} Project},
  author = {Pancheshnyi, S. and Biagi, S. and Bordage, M.C. and Hagelaar, G.J.M. and Morgan, W.L. and Phelps, A.V. and Pitchford, L.C.},
