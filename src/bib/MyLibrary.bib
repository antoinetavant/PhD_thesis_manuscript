  keywords = {eedf},
  pages = {055006}
}

@article{boffard2010,
  title = {Optical Emission Measurements of Electron Energy Distributions in Low-Pressure Argon Inductively Coupled Plasmas},
  volume = {19},
  abstract = {Optical modeling of emissions from low-temperature plasmas provides a non-invasive technique to measure the electron energy distribution function (EEDF) of the plasma. While many models assume the EEDF has a Maxwell\textendash{}Boltzmann distribution, the EEDFs of numerous plasma systems deviate significantly from the Maxwellian form. In this paper, we present an optical emission model for the Ar(3p54p \textrightarrow 3p54s) emission array which is capable of capturing details of non-Maxwellian distributions. Our model combines previously measured electron-impact excitation cross sections with Ar(3p54s) number density measurements and emission spectra. The model also includes corrections for radiation trapping of the Ar(3p54p \textrightarrow 3p54s) emission lines. Results obtained with this optical technique are compared with corresponding Langmuir probe measurements of the EEDF for Ar and Ar/N2 inductively coupled plasma systems operating under a wide variety of source conditions (1\textendash{}25 mTorr, 20\textendash{}1000 W, \%N2 admixture). Both the optical emission method and probe measurements indicate the EEDF shapes are Maxwellian for low electron energies, but with depleted high energy tails.},
  number = {6},
  journal = {Plasma Sources Science and Technology},
  doi = {10.1088/0963-0252/19/6/065001},
